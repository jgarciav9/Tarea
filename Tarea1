# #ejercicio 3
z = int(input("Ingrese un numero "))

if z % 2 == 0:
    print("El numero", z, "es par")
else:
    print("El numero", z, "es impar")

# #ejercicio 4
a = int(input("Ingrese un numero para el ejercicio 4: "))
b = int(input("Ingrese otro numero para el ejercicio 4: "))

if a > b:
    print("El numero", a, "es mayor que", b)
else:
    print("El numero", a, "no es mayor que", b)

